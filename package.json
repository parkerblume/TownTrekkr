{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "^8.1.2"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "metro-config": "^0.80.0"
  },
  "scripts": {
    "install-main": "yarn --ignore-scripts && lerna exec --scope=web-app -- yarn install",
    "install-expo": "yarn --ignore-scripts && lerna exec --scope=expo-app -- yarn install",
    "start": "lerna run start --scope=@town-trekkr/shared --stream",
    "web": "lerna --scope=web-app run start --stream --",
    "build-web": "lerna --scope=web-app run build",
    "expo": "lerna --scope=expo-app run start",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false yarn install && yarn build-web && yarn install --production=false"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/expo",
      "**/expo/**",
      "**/cors",
      "**/cors/**"
    ]
  }
}
